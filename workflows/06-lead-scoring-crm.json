            },
            {
              "column": "ICP Match",
              "value": "={{ $json.icp_match }}"
            },
            {
              "column": "Urgency",
              "value": "={{ $json.urgency_score }}"
            },
            {
              "column": "Scored At",
              "value": "={{ $json.scored_at }}"
            }
          ]
        },
        "options": {}
      },
      "id": "sheets-all-leads-001",
      "name": "Log to All Leads",
      "type": "n8n-nodes-base.googleSheets",
      "typeVersion": 3,
      "position": [1250, 400],
      "notes": "LEAD LOGGING: Records all leads with scores to master tracking sheet",
      "credentials": {
        "googleSheetsOAuth2Api": {
          "id": "1",
          "name": "Google Workshop Account"
        }
      }
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={{ {\n  \"success\": true,\n  \"lead_score\": $json.lead_score,\n  \"qualification_status\": $json.qualification_status,\n  \"assigned_priority\": $json.assigned_priority,\n  \"is_hot_lead\": $json.lead_score >= 70,\n  \"recommended_actions\": $json.recommended_actions,\n  \"message\": \"Lead successfully scored and logged. \" + ($json.lead_score >= 70 ? \"Sales team has been notified of this hot lead!\" : \"Lead added to pipeline.\")\n} }}",
        "options": {}
      },
      "id": "webhook-response-001",
      "name": "Response to Webhook",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [1650, 300],
      "notes": "RESPONSE: Returns lead scoring results and next steps to requester"
    }
